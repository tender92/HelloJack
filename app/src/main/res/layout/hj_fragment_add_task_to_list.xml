<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hj_tools_gray5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_task_to_list_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/hj_tools_list_black"
        android:drawableRight="@mipmap/hj_tools_expand_more_black"
        android:text="添加到任务列表的名称"
        android:textSize="20sp"
        android:textColor="@color/hj_tools_black1"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_add_task_to_list_task"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_add_task_to_list_task"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>