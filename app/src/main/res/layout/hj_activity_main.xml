<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tender.hellojack.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hj_status_bar_height"
        android:background="@color/hj_toolbar_bg"
        android:id="@+id/hj_view" />

    <include layout="@layout/hj_custom_actionbar"/>

    <Button
        android:id="@+id/btn_to_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To My Info"
        android:textSize="@dimen/hj_text_size_40px"
        android:textColor="@color/hj_white"
        android:background="@color/hj_toolbar_bg"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_to_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share is Pleasure"
        android:textSize="@dimen/hj_text_size_40px"
        android:textColor="@color/hj_white"
        android:background="@color/hj_toolbar_bg"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

</LinearLayout>
