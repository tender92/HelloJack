<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_home_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To My Info"
        android:textSize="@dimen/hj_text_size_40px"
        android:textColor="@color/hj_white"
        android:background="@color/hj_toolbar_bg"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_home_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share is Pleasure"
        android:textSize="@dimen/hj_text_size_40px"
        android:textColor="@color/hj_white"
        android:background="@color/hj_toolbar_bg"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_home_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/hj_text_size_30px"
        android:background="@color/hj_toolbar_bg"
        android:scrollbars="vertical"/>

    <com.tender.tools.views.RainbowBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        app:hj_tools_hspace="80dp"
        app:hj_tools_vspace="10dp"
        app:hj_tools_color="#ce0812"/>
</LinearLayout>