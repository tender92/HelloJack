<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/hj_layout_custom_actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_home_once"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一次性框架试用"
                android:textSize="14sp"
                android:textColor="@color/hj_tools_white"
                android:background="@color/hj_tools_toolbar_bg"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_home_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Design study"
                android:textSize="14sp"
                android:textColor="@color/hj_tools_white"
                android:background="@color/hj_tools_toolbar_bg"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_home_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share is Pleasure"
                android:textSize="14sp"
                android:textColor="@color/hj_tools_white"
                android:background="@color/hj_tools_toolbar_bg"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_home_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/hj_tools_toolbar_bg"
                android:scrollbars="vertical"/>

            <com.tender.tools.views.RainbowBar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:hj_tools_hspace="80dp"
                app:hj_tools_vspace="10dp"
                app:hj_tools_color="#ce0812"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>