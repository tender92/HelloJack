<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/hj_tools_shape_dialog_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="@color/hj_tools_black0"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_gender_male"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/hj_selector_option_item"
            android:drawableRight="@mipmap/hj_list_unselected"
            android:text="男"
            android:textSize="16sp"
            android:textColor="@color/hj_tools_gray0"/>

        <View
            style="@style/hj_tools_line1"/>

        <TextView
            android:id="@+id/tv_gender_female"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/hj_selector_option_item"
            android:drawableRight="@mipmap/hj_list_unselected"
            android:text="女"
            android:textSize="16sp"
            android:textColor="@color/hj_tools_gray0"/>
    </LinearLayout>
</LinearLayout>