<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_session_fun_voice"
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_voice"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="语音输入"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_record"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="小视频"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_red_packet"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="红包"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_transfer"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="转账"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_collection"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="我的收藏"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_location"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="位置"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_video"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="视频聊天"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/hj_tools_selector_option_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/hj_tools_session_function_image"
                    android:src="@mipmap/hj_session_func_business_card"/>
                <TextView
                    style="@style/hj_tools_session_function_text"
                    android:text="名片"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>