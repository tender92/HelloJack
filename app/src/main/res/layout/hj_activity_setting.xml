<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_setting_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/hjv_setting_fill_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hj_status_bar_height"
            android:background="@drawable/hj_shape_toolbar_bg" />

        <include layout="@layout/hj_layout_custom_actionbar"/>

        <FrameLayout
            android:id="@+id/fl_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nm_setting_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/hj_layout_setting_navigation_header"
        app:menu="@menu/hj_menu_setting_navigation"/>
</android.support.v4.widget.DrawerLayout>