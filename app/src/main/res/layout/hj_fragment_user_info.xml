<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/hj_tools_gray5">

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hj_tools_selector_option_item"
        android:orientation="horizontal"
        android:paddingRight="3dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_user_info_header"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/hj_mine_default_header"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_user_info_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:text="Tender"
                    android:textColor="@color/hj_tools_gray0"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/iv_user_info_gender"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/hj_gender_male"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号:"
                    android:textColor="@color/hj_tools_gray2"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_user_info_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="hdlgdx987"
                    android:textColor="@color/hj_tools_gray2"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textColor="@color/hj_tools_gray2"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_user_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="hdlgdx987"
                    android:textColor="@color/hj_tools_gray2"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/oiv_user_info_alias_and_tag"
        style="@style/hj_tools_optionItem"
        android:layout_marginTop="20dp"
        android:background="@drawable/hj_tools_selector_option_item"
        app:left_text="设置备注和标签"
        app:left_text_color="@color/hj_tools_black0"
        app:left_text_size="16sp"/>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/oiv_user_info_region"
        style="@style/hj_tools_optionItem"
        android:layout_marginTop="20dp"
        android:background="@drawable/hj_tools_selector_option_item"
        app:left_text="地区"
        app:left_text_color="@color/hj_tools_black0"
        app:left_text_size="16sp"
        app:right_text_color="@color/hj_tools_gray2"
        app:right_text_margin_right="20dp"
        app:right_text_size="@dimen/hj_text_normal_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/hj_tools_white">
        <View
            style="@style/hj_tools_line1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/oiv_user_info_signature"
        style="@style/hj_tools_optionItem"
        android:background="@drawable/hj_tools_selector_option_item"
        app:left_text="个性签名"
        app:left_text_color="@color/hj_tools_black0"
        app:left_text_size="16sp"
        app:right_text_color="@color/hj_tools_gray2"
        app:right_text_margin_right="20dp"
        app:right_text_size="@dimen/hj_text_normal_size"/>

    <Button
        android:id="@+id/btn_user_info_send_message"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/hj_tools_selector_button_bg"
        android:text="发消息"
        android:textColor="@color/hj_tools_white"
        android:textSize="@dimen/hj_tools_text_big_size"/>
</LinearLayout>